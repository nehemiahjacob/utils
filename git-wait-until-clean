#!/bin/bash

#=======================================================================
# git-wait-until-clean
# File ID: 92d46e22-d5a1-11e4-9769-000df06acc56
#
# Wait until the current Git repository is clean before continuing.
#
# Author: Ã˜yvind A. Holm <sunny@sunbase.org>
# License: GNU General Public License version 2 or later.
#=======================================================================

unset u_str
test "$1" = "-u" && { u_str=" --untracked-files=no"; shift; }

unset did_wait
while test "$(git status --porcelain$u_str)" != ""; do
    echo Waiting for $(hostname):$(pwd) to be cleaned up... \($(date)\)
    sleep 5
    did_wait=1
done
test -n "$did_wait" && echo $(hostname):$(pwd) is clean. Continuing...
exit 0
