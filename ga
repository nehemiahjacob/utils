#!/bin/bash

#=======================================================================
# ga
# File ID: e89047ce-29d1-11e2-bb6f-00c0a8deee11
#=======================================================================

if test "$1" = "sync"; then
    stat_output="$(git status --porcelain | grep -v '^??')"
    test -n "$stat_output" && { echo ga: Repo has modifications, will not git-annex sync >&2; exit 1; }
fi
/opt/git-annex/git-annex "$@"
